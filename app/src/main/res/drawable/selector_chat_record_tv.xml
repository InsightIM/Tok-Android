<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/s_1" android:color="@color/chat_record_stroke" />
            <solid android:color="@color/chat_record_solid_press"/>
            <corners android:radius="@dimen/s_16" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/s_1" android:color="@color/chat_record_stroke" />
            <solid android:color="@color/chat_record_solid_normal"/>
            <corners android:radius="@dimen/s_16" />
        </shape>
    </item>
</selector>
