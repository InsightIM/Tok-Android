<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_12"
        android:background="@color/white_absolute"
        android:orientation="vertical"
        android:paddingStart="@dimen/s_16"
        android:paddingTop="@dimen/s_12"
        android:paddingEnd="@dimen/s_16"
        android:paddingBottom="@dimen/s_6">

        <TextView
            style="@style/ContentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_to_send_offline_msg"
            android:textStyle="bold" />

        <TextView
            style="@style/ContentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s_10"
            android:lineSpacingExtra="@dimen/s_5"
            android:text="@string/how_to_send_offline_msg_content" />

        <TextView
            android:id="@+id/id_bot_info_more"
            style="@style/ContentBtnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/s_10"
            android:background="@drawable/shape_rect_bgdedede_r20"
            android:paddingStart="@dimen/s_10"
            android:paddingEnd="@dimen/s_10"
            android:text="@string/more" />
    </LinearLayout>

    <TextView
        style="@style/ModelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/s_16"
        android:layout_marginTop="@dimen/s_7"
        android:text="@string/add_offline_bot_title" />

    <com.client.tok.widget.HeadInfoView
        android:id="@+id/id_bot_info_hiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_5" />

</LinearLayout>