<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:empty="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_absolute">

    <ListView
        android:id="@+id/id_contact_req_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <com.client.tok.widget.EmptyPromptView
        android:id="@+id/id_contact_req_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        empty:mainContentId="@string/no_new_friend_request" />

</RelativeLayout>