<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/s_12"
    android:paddingTop="@dimen/s_12"
    android:paddingEnd="@dimen/s_12">

    <TextView
        android:id="@+id/id_prompt_tv"
        style="@style/IntroduceContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tok_id_prompt"
        android:visibility="gone" />

    <TextView
        android:id="@+id/id_tok_id_tv"
        style="@style/IntroduceContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/s_6"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="@string/tok_id_prompt"
        android:visibility="gone" />

    <EditText
        android:id="@+id/id_input_et"
        style="@style/EtBgGreyFontBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="input msg" />
</LinearLayout>
