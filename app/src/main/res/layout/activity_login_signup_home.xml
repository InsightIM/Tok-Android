<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_bg">

    <TextView
        style="@style/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/s_170"
        android:text="@string/app_name"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/s_14"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_20"
        android:paddingRight="@dimen/spacing_20">

        <TextView
            android:id="@+id/id_login_create_account_bt"
            style="@style/BtBgWhiteFontBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/create_account" />

        <TextView
            android:id="@+id/id_login_login_bt"
            style="@style/BtBgBlueFontWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s_30"
            android:gravity="center"
            android:text="@string/login" />

        <TextView
            android:id="@+id/id_login_import_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/s_10"
            android:padding="@dimen/s_10"
            android:text="@string/import_account" />
    </LinearLayout>

</RelativeLayout>
