<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/s_30">

    <ImageView
        android:id="@+id/id_album_iv"
        style="@style/SelAttachment"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/open_album" />

    <ImageView
        android:id="@+id/id_camera_iv"
        style="@style/SelAttachment"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/open_camera" />

    <ImageView
        android:id="@+id/id_file_iv"
        style="@style/SelAttachment"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/open_file" />

</RelativeLayout>
