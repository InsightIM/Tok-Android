<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_absolute"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/s_10">

    <TextView
        android:id="@+id/id_edit_prompt_tv"
        style="@style/FunctionPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User Name" />

    <com.client.tok.widget.TextInputDrawableEt
        android:id="@+id/id_edit_content_tv"
        style="@style/InputContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_edit_prompt_tv"
        android:drawableEnd="@drawable/del"
        android:maxLength="100"
        android:theme="@style/InputEditTextBg"
        tools:text="Hello World" />


</RelativeLayout>