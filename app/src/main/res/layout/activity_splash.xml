<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_splash_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:visibility="gone" />

    <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
        android:id="@+id/id_splash_indicator"
        android:layout_width="@dimen/s_48"
        android:layout_height="@dimen/s_10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/s_72"
        app:vpi_default_color="@color/c_d8d8d8"
        app:vpi_distanceType="BY_LAYOUT"
        app:vpi_indicatorType="SPRING"
        app:vpi_radius="@dimen/s_4"
        app:vpi_selected_color="@color/c_157efb" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            style="@style/Slogon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/s_170"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/s_12"
            android:paddingStart="@dimen/s_50"
            android:paddingEnd="@dimen/s_50"
            android:text="@string/slogon"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/s_100"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/FunctionPrompt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_8"
                android:text="@string/app_name" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
