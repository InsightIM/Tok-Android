<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_15"
    android:paddingTop="@dimen/s_40"
    android:paddingEnd="@dimen/spacing_15">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_signup_name_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/InputLayoutHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/id_signup_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/hint_account_name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:theme="@style/InputEditTextBg" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_signup_pwd_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_30"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/SafeContentSmaller"
        app:hintTextAppearance="@style/InputLayoutHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/id_signup_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_account_pwd"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:theme="@style/InputEditTextBg" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_signup_confirm_pwd_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_30"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/InputLayoutHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/id_signup_confirm_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_confirm_pwd"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:theme="@style/InputEditTextBg" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/id_signup_create_bt"
        style="@style/CommonBigBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_40"
        android:enabled="false"
        android:padding="@dimen/s_10"
        android:text="@string/create_account" />
</LinearLayout>

